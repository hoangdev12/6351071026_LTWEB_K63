@model QLBANSACH.Models.SACH

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Delete Book</h2>

<h3>Are you sure you want to delete this book?</h3>
<div class="panel panel-danger">
    <div class="panel-heading">
        <h4>Book Details</h4>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Masach)</dt>
            <dd>@Html.DisplayFor(model => model.Masach)</dd>

            <dt>@Html.DisplayNameFor(model => model.Tensach)</dt>
            <dd>@Html.DisplayFor(model => model.Tensach)</dd>

            <dt>@Html.DisplayNameFor(model => model.Giaban)</dt>
            <dd>@Html.DisplayFor(model => model.Giaban)</dd>

            <dt>@Html.DisplayNameFor(model => model.Mota)</dt>
            <dd>@Html.DisplayFor(model => model.Mota)</dd>

            <dt>@Html.DisplayNameFor(model => model.Anhbia)</dt>
            <dd>
                @if (!string.IsNullOrEmpty(Model.Anhbia))
                {
                    <img src="@Url.Content("~/Content/images/SACH/" + Model.Anhbia)" alt="Book Cover" class="img-thumbnail" style="max-width: 200px;" />
                }
                else
                {
                    <span>No Image Available</span>
                }
            </dd>

            <dt>@Html.DisplayNameFor(model => model.Ngaycapnhat)</dt>
            <dd>@Html.DisplayFor(model => model.Ngaycapnhat)</dd>

            <dt>@Html.DisplayNameFor(model => model.Soluongton)</dt>
            <dd>@Html.DisplayFor(model => model.Soluongton)</dd>

            <dt>@Html.DisplayNameFor(model => model.MaCD)</dt>
            <dd>@Html.DisplayFor(model => model.MaCD)</dd>

            <dt>@Html.DisplayNameFor(model => model.MaNXB)</dt>
            <dd>@Html.DisplayFor(model => model.MaNXB)</dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Back to List", "Sach","Admin", null, new { @class = "btn btn-secondary" })
    </div>
}

<style>
    .form-actions {
        margin-top: 20px;
    }

    .panel-danger .panel-heading {
        background-color: #f2dede;
        border-color: #ebccd1;
        color: #a94442;
    }
</style>
