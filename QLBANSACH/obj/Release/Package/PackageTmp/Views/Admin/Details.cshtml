@model QLBANSACH.Models.SACH

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Book Details</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Book Information</h4>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Masach)</th>
                <td>@Html.DisplayFor(model => model.Masach)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Tensach)</th>
                <td>@Html.DisplayFor(model => model.Tensach)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Giaban)</th>
                <td>@Html.DisplayFor(model => model.Giaban)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Mota)</th>
                <td>@Html.DisplayFor(model => model.Mota)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Anhbia)</th>
                <td>
                    @if (!string.IsNullOrEmpty(Model.Anhbia))
                    {
                        <img src="@Url.Content("~/Content/images/SACH/" + Model.Anhbia)" alt="Book Cover" class="img-thumbnail" style="max-width: 200px;" />
                    }
                    else
                    {
                        <span>No Image Available</span>
                    }
                </td>
            </tr>

            <tr>
                <th>@Html.DisplayNameFor(model => model.Ngaycapnhat)</th>
                <td>@Html.DisplayFor(model => model.Ngaycapnhat)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Soluongton)</th>
                <td>@Html.DisplayFor(model => model.Soluongton)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.MaCD)</th>
                <td>@Html.DisplayFor(model => model.MaCD)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.MaNXB)</th>
                <td>@Html.DisplayFor(model => model.MaNXB)</td>
            </tr>
        </table>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Masach }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back to List", "Sach", "Admin", null, new { @class = "btn btn-default" })
</p>
