@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<QLBANSACH.Models.SACH>

@{
    ViewBag.Title = "Home Page";
}

<style>
    .templatemo_product_box img {
        width: 100px;
        height: 100px;
        object-fit: cover; /* Giúp ảnh vừa khít trong khung mà không bị méo */
    }
</style>

<div id="templatemo_content_right" ;">
    @foreach (var sach in Model)
    {
        <div class="templatemo_product_box">
            <h1>@sach.Tensach <span></span></h1>
            <a href="@Url.Action("DetailsSP", "Home", new { id = sach.Masach })">
                <img src="~/Content/images/SACH/@sach.Anhbia" alt="@sach.Tensach" />
            </a>
            <div class="product_info">
                <p>@sach.Mota</p>
                <h3>@sach.Giaban</h3>
                <div class="buy_now_button"><a href="@Url.Action("Buy", "Book", new { id = sach.Masach })">Buy Now</a></div>
                <div class="detail_button"><a href="@Url.Action("DetailsSP", "Home", new { id = sach.Masach })">Detail</a></div>
            </div>
        </div>
    }
</div>

<div style="position:relative; top:500px; left:600px;">
    <ul class="pagination" style="display: flex; list-style-type: none; padding: 0; margin: 0;">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </ul>
</div>

<style>
   
    .pagination {
        display: flex; 
        flex-wrap: nowrap; 
        justify-content: center; 
        padding: 0;
        margin: 0;
    }

        .pagination li {
            display: inline-block; 
            margin-right: 10px; 
        }

        .pagination a {
            padding: 10px 15px; 
            text-decoration: none;
            background-color: #f1f1f1; 
            border: 1px solid #ddd; 
            color: #333;
        }

        .pagination .current a {
            background-color: #007bff; 
            color: white;
        }

        .pagination a:hover {
            background-color: #ddd; 
        }
</style>
