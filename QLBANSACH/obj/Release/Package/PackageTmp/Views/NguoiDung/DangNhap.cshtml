@model QLBANSACH.Models.LoginViewModel

@{
    ViewBag.Title = "Đăng Nhập";
}

<h2>Đăng Nhập</h2>

@using (Html.BeginForm("DangNhap", "NguoiDung", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.TenDN)
        @Html.TextBoxFor(m => m.TenDN, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TenDN)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Matkhau)
        @Html.PasswordFor(m => m.Matkhau, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Matkhau)
    </div>

    <button type="submit" class="btn btn-primary">Đăng Nhập</button>
}
